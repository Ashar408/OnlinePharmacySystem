@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
      <div class=" col-lg-3 col-md-6">
       <div class="row p-2">
           <div class="col-12 p-1" style="border-radius:5px; border:1px solid #008cba">
               <div class="card">
                   <img src="@product.ImageUrl" class="card-img-top rounded" style="height:150px;" />
                   <div class="card-body">
                       <div class="pl-1">
                           <p class="card-title text-primary h5">@product.Name</p>
                           <p class="card-title text-info">by <b>@product.Company.Name</b></p>
                       </div>
                       <div class="pl-1">
                           <p> Price: <b>$@product.Price.ToString("0.00")</b></p>
                       </div>
                      
                   </div>
               </div>
               <div><a asp-controller="Home" asp-action="Details" class="btn btn-primary form-control" asp-route-productId="@product.Id">Details</a></div>
           </div>
       </div>

   </div>

    }

</div>
